<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/androidBg"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="0pt"
        android:background="@color/calcButton"
        android:fontFamily="@font/poppin"
        android:text="GPA - Calculator"
        android:textColor="#ffffff"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textSize="28sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:fontFamily="@font/poppin"
        android:layout_marginBottom="3pt"
        android:layout_weight="1"
        android:background="@drawable/radius2"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0 "
        android:textColor="@color/ed1Text"
        android:cursorVisible="false"
        android:textSize="22pt" />

    <TableLayout
        android:layout_marginBottom="3pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius9">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:ems="10"
        android:layout_marginBottom="3pt"
        android:layout_marginTop="3pt"
        android:background="@drawable/radius7"
        android:layout_marginRight="7pt"
        android:gravity="center"
        android:textColor="#5A4F4F"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:cursorVisible="false"
        android:text="Grade âž¡ Credits "
        android:inputType="textPersonName"
        android:textSize="10pt"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_marginTop="6pt"
        android:src="@drawable/outline_mode_night_24"
        android:backgroundTint="@color/mode"
        android:layout_height="60dp"
        android:layout_gravity="right|center"
        android:layout_marginRight="4pt"
        android:layout_marginBottom="3pt"
        android:layout_margin="7dp" />


    </TableRow>
    </TableLayout>


